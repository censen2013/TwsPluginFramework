<?xml version="1.0" encoding="utf-8"?>
<com.example.pluginbluetooth.widget.WatchLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imageViewMeterWatchHandContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true">

    <ImageView
        android:id="@+id/imageViewMeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/garbo_nord" />

    <ImageView
        android:id="@+id/imageViewWatchHandHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@mipmap/garbo_nord_hr_hand" />

    <ImageView
        android:id="@+id/imageViewWatchHandMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@mipmap/garbo_nord_min_hand" />

    <!-- 当前暂时不用这个遮罩 -->

    <ImageView
        android:id="@+id/imageViewWatchGlass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@mipmap/garbo_highlight"
        android:visibility="gone" />

</com.example.pluginbluetooth.widget.WatchLayout>